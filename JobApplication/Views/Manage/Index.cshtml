@{
    ViewBag.Title = "Manage your account";
    var activeTab = ViewBag.ActiveTab as string ?? "Profile";
    ViewBag.Success = TempData["Success"];
}

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 mb-3">
            <div class="list-group">
                <a class="list-group-item list-group-item-action @(activeTab == "Profile" ? "active" : "")"
                   href="@Url.Action("Index", new { tab = "Profile" })">Profile</a>
                @*<a class="list-group-item list-group-item-action @(activeTab == "Email" ? "active" : "")"
                   href="@Url.Action("Index", new { tab = "Email" })">Email</a>*@
                <a class="list-group-item list-group-item-action @(activeTab == "Password" ? "active" : "")"
                   href="@Url.Action("Index", new { tab = "Password" })">Password</a>
                @*<a class="list-group-item list-group-item-action @(activeTab == "Delete" ? "active" : "")"
                   href="@Url.Action("Index", new { tab = "Delete" })">Personal Data</a>*@
            </div>
        </div>

        <!-- Content -->
        <div class="col-md-9">
            @if (activeTab == "Profile")
            {
                @Html.Partial("_Profile")
            }
            else if (activeTab == "Email")
            {
                @Html.Partial("_Email")
            }
            else if (activeTab == "Password")
            {
                @Html.Partial("_Password")
            }
            else if (activeTab == "Delete")
            {
                @Html.Partial("_Delete")
            }
        </div>
    </div>
</div>
