@model  JobApplication.Models.DeleteUser

<h4 class="mb-4 text-danger">Request Account Deletion</h4>

<p class="text-muted">
    By submitting this request, your account will be <strong>deactivated immediately</strong> and scheduled for deletion after <strong>30 days</strong>.<br />
    You may cancel this request and fully restore your account by logging in again before the 30-day period ends.
</p>

@using (Html.BeginForm("Delete", "Manage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="confirmDelete" name="confirmDelete" required>
            <label class="form-check-label" for="confirmDelete">
                I understand my account will be permanently deleted after 30 days of inactivity
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-danger">Request Deletion</button>
    <a href="@Url.Action("Index", "Manage", new { tab = "Profile" })" class="btn btn-secondary ms-2">Cancel</a>
}
