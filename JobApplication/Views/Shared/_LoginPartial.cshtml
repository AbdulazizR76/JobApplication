@using System.Globalization
@using Res = JobApplication.Properties.Resources

@{
    var currentLang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;

}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav navbar-right">
            <li class="nav-item">
                @if (currentLang == "en")
                {
                    <a class="nav-link" href="@Url.Action("SetLanguage", "Home", new { lang = "ar" })">العربية</a>
                }
                else
                {
                    <a class="nav-link" href="@Url.Action("SetLanguage", "Home", new { lang = "en" })">English</a>
                }
            </li>
            <li>
                @Html.ActionLink(Res.Welcome +" "+ @*User.Identity.Name*@""+" ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            @if (currentLang == "en")
            {
                <a class="nav-link" href="@Url.Action("SetLanguage", "Home", new { lang = "ar" })">العربية</a>
            }
            else
            {
                <a class="nav-link" href="@Url.Action("SetLanguage", "Home", new { lang = "en" })">English</a>
            }
        </li>
        <li>@Html.ActionLink(@Res.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li>@Html.ActionLink(Res.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>

    </ul>
}
